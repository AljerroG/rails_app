<br><div style="font-family:verdana;font-size:12px;color:#333333;align:center"><b>DATABASE LIST</b></div>

<form action="<%= '/filter' %>" method="get" >
  <p>Filter: <%= text_field_tag :comment, params[:comment] %>  <%= "NO MATCH FILTER!" if params[:empty] == 0 %>	</p>
</form>

<table class="gridtable">

<tr>
	<th>ID</th><th>City Name</th><th>Area Type</th><th>State</th><th>State Name</th><th>DB Name</th><th>Link</th><th>Comment</th><th>Scripter</th>

</tr>

<% @databaselists.each do |data| %>
	<tr>
		<td><%= link_to data.id, data %></td>
		<td><%= data.state %></td>
		<td><%= data.area_type %></td>
		<td><%= data.state_abb %></td>
		<td><%= data.state_full %></td>
		<td><%= data.dbname %></td>
		<td><%= link_to data.link.to_s.gsub(/^(https?:\/\/[^\/]+\/).+/, '\1'), data.link %></td>
		<td><%= data.comment %></td>
		<td><%= data.scripter %></td>
	</th>
<% end %>